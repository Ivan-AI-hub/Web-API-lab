@using Whosales.Domain
@{
	Layout = "ProvaiderLayout";
}
@model Provaider

<div class="col-md-6 align-self-center container">
	<div class="align-self-center">
		<form method="post">
			<div class="form-group">
				<label class="form-label">Название поставщика</label>
				<input value="@Model.Name" type="text" name="Name" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<label class="col-form-label">Адрес поставщика</label>
				<input value="@Model.Address" type="text" name="Address" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<label class="col-form-label">Номер телефона</label>
				<input value="@Model.TelephoneNumber" type="text" name="TelephoneNumber" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<input type="submit" class="form-control" style="margin-top:20px" />
			</div>
		</form>
	</div>
</div>