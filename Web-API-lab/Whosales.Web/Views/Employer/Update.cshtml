@using Whosales.Domain
@{
	Layout = "EmployerLayout";
}
@model Employer

<div class="col-md-6 align-self-center container">
	<div class="align-self-center">
		<form method="post">
			<div class="form-group">
				<label class="form-label">Имя сотрудника</label>
				<input value="@Model.Name" type="text" name="Name" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<input type="submit" class="form-control" style="margin-top:20px" />
			</div>
		</form>
	</div>
</div>