@{
	Layout = "ProductLayout";
}
@using Whosales.Web.HtmlHelpers
@using Whosales.Web.Models;
@using Whosales.Web.Models.Products;
@model ProductAddPageViewModel

<div class="col-md-6 align-self-center container">
	<div class="align-self-center">
		<form method="post">
			<div class="form-group">
				<label class="form-label">Название товара</label>
				<input type="text" name="Name" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<label class="col-form-label">Условия хранения</label>
				<input type="text" name="StorageConditions" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<label class="col-form-label">Упаковка</label>
				<input type="text" name="Package" class="form-control bg-black bg-opacity-25 " required />
			</div>
			<div class="form-group">
				<label class="col-form-label">Срок годности</label>
				<input type="datetime-local" name="StorageLife" class="form-control" />
			</div>
			<div class="form-group">
				<label class="col-form-label">Производитель</label>
				@Html.EnumerableDropDown(Model.Manufacturers, x => x.ManufacturerId, x => x.Name,false, Model.selectedManufacturerId, "manufacturerId")
			</div>
			<div class="form-group">
				<label class="col-form-label">Тип товара</label>
				@Html.EnumerableDropDown(Model.Types, x => x.ProductTypeId, x => x.Name,false, 1, "typeId")
			</div>
			<div class="form-group">
				<input type="submit" class="form-control" style="margin-top:20px" />
			</div>
		</form>
	</div>
</div>
